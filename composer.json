{
    "name": "flus/webubbub",
    "description": "A WebSub hub to bring instant distribution of content between Web actors.",
    "type": "project",
    "license": "AGPL-3.0",
    "minimum-stability": "stable",
    "prefer-stable": true,

    "autoload": {
        "psr-4": {
            "Webubbub\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },

    "require": {
        "php": "^8.2",
        "ext-pcntl": "*",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "flus/minz": "^1.0"
    },

    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^11.0",
        "squizlabs/php_codesniffer": "^3.6",
        "rector/rector": "^2.0"
    }
}
